<div class="p-noticeShow">
  <section class="l-container">
    <h2 class="c-ttl1">お知らせ詳細</h2>
    <article class="c-article1">
      <h3 class="c-article1__head">
        <p class="c-ttl2"><%= notice.content %></p>
        <p class="c-text1">発行日：<%= notice.publishedAt %></p>
      </h3>
      <div class="c-article1__body"><%= notice.content %></div>
      <div class="c-article1__footer">
        <ul class="c-list">
          <li class="c-list__item">
            <a
              href="/<%= notice._id %>/edit"
              class="c-link1"
              >編集</a
            >
          </li>
          <li class="c-list__item">
            <a
              onclick="clickDelete('<%= notice._id %>')"
              href="#"
              class="c-link1"
              >削除</a
            >
          </li>
        </ul>
      </div>
    </article>
    <div class="p-noticeShow__footer">
      <a
        href="/"
        class="c-link1"
        >お知らせ一覧</a
      >
    </div>
    <a
      href="/new"
      class="c-btn2"
      >新規作成</a
    >
  </section>
</div>
<script>
  function clickDelete(id) {
    if (window.confirm('削除してよろしいですか？')) {
      document.location.href = `/${id}/delete?_method=DELETE`
    }
    return false
  }
</script>
